<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/backgr"
    android:id="@+id/main"
    >

    <TextView
        android:id="@+id/imageViewLogo"
        android:layout_width="199dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/instagram"
        android:backgroundTint="@color/white" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_below="@id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="30dp"
        android:background="#43FFFFFF"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="349dp"
        android:layout_height="58dp"
        android:layout_below="@id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#20FFF7F7"
        android:textColor="@android:color/white"
        android:textColorLink="#FBC02D"
        android:textIsSelectable="false"
        app:cornerRadius="0dp"
        app:rippleColor="#7B1FA2"
        android:text="Login" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="377dp"
        android:layout_height="66dp"
        android:layout_below="@id/imageViewLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="#43FFFFFF"
        android:backgroundTint="@color/white"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:text="Forgot your login detail? Get help signing in."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="-------------------------------------OR-------------------------------------"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/LOGOFB"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="260dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/facebook"
        android:backgroundTint="@color/white"
        />

    <TextView
        android:id="@+id/textlogo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="81dp"
        android:gravity="center"
        android:text="Log In with Facebook"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bottomTextView"
        android:layout_width="387dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#20FFF7F7"
        android:gravity="center"
        android:text="Don't have an account? Sign up."
        android:textColor="@color/white"
        android:textSize="15dp" />
</RelativeLayout>